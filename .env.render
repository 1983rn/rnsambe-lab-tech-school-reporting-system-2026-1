# Render Deployment Configuration
# Ensures persistent data storage across deployments

# Set Render-specific environment variables
RENDER=true
DATABASE_PATH=/opt/render/project/src/data/school_reports_persistent.db
BACKUP_DIR=/opt/render/project/src/backups

# Database configuration
SQLITE_TIMEOUT=30
SQLITE_JOURNAL_MODE=WAL

# Backup configuration
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
MAX_BACKUP_SIZE_MB=100

# Data protection
DATA_PROTECTION_ENABLED=true
MIN_DATABASE_SIZE_BYTES=1024

# Logging
LOG_LEVEL=INFO
LOG_FILE=/opt/render/project/src/logs/school_database.log

# Application settings
FLASK_ENV=production
SECRET_KEY_FILE=/opt/render/project/src/.secret_key

# Performance
MAX_CONNECTIONS=20
CONNECTION_TIMEOUT=30
